<Window x:Class="Warehouse.Views.TechnicianPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vms="clr-namespace:Warehouse.ViewModels"
        xmlns:dl="clr-namespace:Warehouse.DataLayer;assembly=Warehouse.DataLayer"
        Title="TechnicianPanelWindow" Height="350" Width="584">

    <Window.DataContext>
        <vms:WarehouseViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Use Product" Grid.Column="0" Margin="10">
            
            <StackPanel DataContext="{Binding Vendors}">
                <ComboBox Name="comboBoxVendors" ItemsSource="{Binding}" 
                          IsSynchronizedWithCurrentItem="True"
                          DisplayMemberPath="Name"/>
                <ListBox ItemsSource="{Binding Path=Vendors.Products}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="Use Product"/>
            </StackPanel>
            
        </GroupBox>
    </Grid>
</Window>
